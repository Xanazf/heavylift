{
  "name": "heavylift",
  "version": "0.1.4",
  "description": "A lightweight CSS design system merging MD3, LiftKit, and Tailwind-like utility.",
  "main": "./dist/core.js",
  "module": "./dist/core.mjs",
  "types": "./dist/core.d.ts",
  "style": "./dist/global.css",
  "bin": {
    "heavylift-gen": "./dist/generateColorScheme.mjs"
  },
  "scripts": {
    "generate-colors": "tsx scripts/generateColorScheme.ts",
    "scaffold": "tsx scripts/scaffold.ts",
    "test": "vitest run",
    "release": "npm run check && npm run test && npm run build && npm publish --access public",
    "build:css": "lightningcss styles/global.css -o dist/global.css --minify --bundle --targets '>= 0.25%' && find styles/lib-hl -name '*.ttf' -exec cp {} dist/ ';' && find styles/lib-hl -name '*.woff2' -exec cp {} dist/ ';'",
    "build:ts": "tsup",
    "build": "npm run build:css && npm run build:ts",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write . && tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "exports": {
    ".": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.mjs",
      "require": "./dist/core.js"
    },
    "./styles": "./dist/global.css",
    "./generator": {
      "types": "./dist/colorSchemeGenerator.d.ts",
      "import": "./dist/colorSchemeGenerator.mjs",
      "require": "./dist/colorSchemeGenerator.js"
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@material/material-color-utilities": "^0.3.0"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "@vitest/coverage-v8": "^4.0.16",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "figlet": "^1.9.3",
    "lightningcss-cli": "^1.30.2",
    "tsup": "^8.3.5",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.16"
  }
}
